{
    "env": {
      "browser": false,
      "node": true,  // This enables Node.js global variables like process
      "es2021": true
    },
    "extends": ["eslint:recommended", "plugin:prettier/recommended"],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "no-undef": "off"  // Disable undefined variable rule for globals
    }
  }
  